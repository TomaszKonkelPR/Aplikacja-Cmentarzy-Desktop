<configuration>
  <!-- (opcjonalnie) podgląd problemów z konfiguracją -->
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

  <!-- gdzie trzymać logi -->
  <property name="logDir" value="${APPDATA:-${user.home}}/AplikacjaCmentarzyLogs"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- aktywny plik logu -->
    <file>${logDir}/app.log</file>

    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- pliki archiwalne z DATĄ i GODZINĄ -->
      <fileNamePattern>${logDir}/app.%d{yyyy-MM-dd_HH}.log</fileNamePattern>
      <!-- ile godzin historii trzymać (np. 14 dni = 14*24 = 336) -->
      <maxHistory>336</maxHistory>
      <!-- (opcjonalnie) łączny limit rozmiaru archiwów -->
      <!-- <totalSizeCap>1GB</totalSizeCap> -->
    </rollingPolicy>
  </appender>

  <!-- asynchroniczne logowanie do pliku (aby nie blokować wątku UI) -->
  <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FILE"/>
    <!-- (opcjonalnie) rozmiar bufora -->
    <!-- <queueSize>8192</queueSize> -->
  </appender>

  <!-- konsola (opcjonalnie) -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- mniej szumu z bibliotek -->
  <logger name="org.hibernate"/>
  <logger name="com.zaxxer.hikari"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="ASYNC_FILE"/>
  </root>
</configuration>
